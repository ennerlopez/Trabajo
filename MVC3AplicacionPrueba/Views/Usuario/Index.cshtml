@model IEnumerable<MVC3AplicacionPrueba.Models.Usuario>


<p>
       @Html.ActionLink("+ Nuevo Usuario", "Create", null, new { @class = "BotonNuevo btn btn-primary NoSubrayado" })
   
 </p>
<br/>

<table class="tabla">
        <thead>
            <tr>
                <th>
                    nombreUsuario
                </th>
                <th>
                    cambioPasswordUsuario
                </th>
                <th>
                    codigoPerfil
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreUsuario)
                    </td>
                  
                    <td>
                        @Html.DisplayFor(modelItem => item.siNo.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PerfilEntidad.nombrePerfil)
                    </td>
                 
                    
                        <td>
                    <a class="BotonEdit" href='@Url.Action("Edit", new { id = item.codigoUsuario })'>
                        <img alt="" src='@Url.Content("~/Content/BotonesTabla/Edit.png")' />
                    </a>  
                
                </td>
                <td>
                    <a class="BotonDetails" href="@Url.Action("Details", new { id = item.codigoUsuario })">
                        <img alt="" src="@Url.Content("~/Content/BotonesTabla/find.png")" /> 
                    </a>
            
                </td>
                
                 <td>
                <a class="BotonDelete" href="@Url.Action("Delete", new { id = item.codigoUsuario })">
                    <img alt="" src="@Url.Content("~/Content/BotonesTabla/Delete.png")" /> 
                </a>
            
                </td>
                </tr>
            }
        </tbody>
        <tfoot>
    </table>
