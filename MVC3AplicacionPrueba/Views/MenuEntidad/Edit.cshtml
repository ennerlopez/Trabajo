@using MVC3AplicacionPrueba.Models
@model MVC3AplicacionPrueba.Models.MenuEntidad

@{
    ViewBag.Title = "Menu";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "MenuEntidad", FormMethod.Post, new { @class = "validacionFormularioGeneral" }))
{      <fieldset>
       

        @Html.HiddenFor(model => model.codigoMenu)
        
        
        <table class="chooseLista colorBlanco Negrita">
            <tr>
                <td class="colorAmarillo" colspan="2">Editar Menu</td>
            </tr>
            <tr>
                <td>Nombre:</td>
                <td> @Html.TextBoxFor(model => model.descripcionMenu, new { @class = "validate[required,custom[onlyLetterSp]]" })
                  </td>
            </tr>
            <tr>
                <td>Modulo:</td>
                <td>
                    @Html.DropDownListFor(model => model.codigoModulo, new SelectList(Data.listaDeModuloEntidad(), "codigoModulo", "descripcion"), "-- Seleccione --", new { @class = "validate[required]" })
                    @Html.ValidationMessageFor(model => model.codigoModulo)</td>
            </tr>
            <tr>
                <td></td>
                <td>  <input type="submit" value="Guardar" /></td>
            </tr>
        </table>
   
    </fieldset>
}

<br/>
<div style="height: 48px;" >
    
    <a class="BotonBack" href="@Url.Action("Index")">
       <img alt="" src="@Url.Content("~/Content/BotonesTabla/back.png")" /> 
    </a>

</div>
