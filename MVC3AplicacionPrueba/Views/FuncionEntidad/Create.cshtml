@model MVC3AplicacionPrueba.Models.Modelado.ModelFunciones.ModelFunciones

@{
    ViewBag.Title = "Funciones";
}




@using (Html.BeginForm("Create", "FuncionEntidad", FormMethod.Post, new { @class = "validacionFormularioGeneral" }))
{
    
     <table class="chooseLista colorBlanco Negrita">
         <tr>
             <td class="colorAmarillo" colspan="2">Creación De Modulo </td>
         </tr>
         <tr>
             <td>Nombre:</td>
             <td> @Html.TextBoxFor(model => model.descripcion, new { @class = "validate[required,custom[onlyLetterSp]]" })</td>
         </tr>
         <tr>
             <td>Controlador:</td>
             <td> @Html.TextBoxFor(model => model.controlador, new { @class = "validate[required,custom[onlyLetterSp]]" })</td>
         </tr>
         <tr>
             <td>Acción</td>
             <td> @Html.TextBoxFor(model => model.accion, new { @class = "validate[required,custom[onlyLetterSp]]" })</td>
         </tr>
         <tr>
             <td>Menu:</td>
             <td>   @Html.DropDownListFor(model => model.listaMenu, new SelectList(Model.listaMenu, "value", "text"), "Seleccione una opción", new { @class = "validate[required]" })</td>
         </tr>
         <tr>
             <td></td>
             <td> <input type="submit" value="Guardar" /></td>
         </tr>
        
     </table>
    
    
    
}
<br/>
<div style="height: 48px;" >
    
    <a class="BotonBack" href="@Url.Action("Index")">
       <img alt="" src="@Url.Content("~/Content/BotonesTabla/back.png")" /> 
    </a>

</div>
