@model MVC3AplicacionPrueba.Models.Modelado.ModelHojaBultos.ModelResumenHojaBultos

@{
    ViewBag.Title = "Hoja Bultos";
}



<script src="@Url.Content("~/Scripts/HojaBultos/CrearHojaBulto.js")" type="text/javascript"></script>


@using (Html.BeginForm("", "", FormMethod.Post, new { id = "formularioCrearHojaBulto" }))
{


    <table class="chooseLista colorBlanco Negrita">
        <tr>
            <td class="colorAmarillo" colspan="3">Datos</td>
        </tr>
        <tr>
            <td>Codigo:  @Html.TextBoxFor(model => model.codigoOrden, new {@class = "validate[required]",@readonly="true"})
                
            </td>
                
            <td>Cliente: @Html.TextBoxFor(model => model.cliente, new {@class = "validate[required]",@readonly="true"})
            </td>
             
           
        </tr>
    </table>
  
     <table class="chooseLista colorBlanco Negrita">
         <tr>
              <td>Serie:<input id="crear_serie" type="text" style="width: 30px;"/></td>
             <td>Seccion:<input id="crear_SeccionHojaBulto" type="text" style="width: 30px;"/></td>
             <td>Nro Bulto:<input id="crear_nroBulto" type="text"  style="width: 30px;"/></td>
             <td>Capa:<select id="crear_capa">
                          <option value="Z">Seleccione Capa</option>
                          <option value="A">A</option>
                          <option value="B">B</option>
                          <option value="C">C</option>
                          <option value="D">D</option>
                          <option value="E">E</option>
                          <option value="F">F</option>
                      </select></td>
             <td>Talla:  @Html.DropDownListFor(model => model.listaTallas, new SelectList(Model.listaTallas, "value", "text"), "Seleccione El Estilo",new {id="crear_talla"})</td>
             <td>Cantidad: <input id="crear_cantidad" type="text"  style="width: 30px;"/></td>
             <td> <button id="crear_botonAgregarSeccion" type="button">Agregar</button></td>
            
         </tr>
    </table>
       
         <br />
    
    <table class="tablaAjax">
            <thead>
            <tr>
                 <th>Serie</th>
                <th>Seccion</th>
                <th>Nro Bulto</th>
                <th>Capa</th>
                <th>Talla</th>
                <th>Cantidad</th>    
                <th></th>  
            </tr>
        </thead>
        <tbody>
           @foreach (var detalle in Model.listaDetalle)
            {
                <tr>
                    <td>@detalle.serie</td>
                    <td>@detalle.nroSeccion</td>
                    <td>@detalle.numeroBulto</td>
                    <td>@detalle.capaCorte</td>
                    <td>@detalle.tallaCompleta</td>
                    <td>@detalle.cantidad</td>
                    <td><a class='elimina'>Eliminar</a></td>
                </tr>
            } 
        </tbody>
        <tfoot>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tfoot>

    </table>
    <br/>
    <p>
        <button id="GuardarHojaBulto" type="submit">Guardar</button>
    </p>
}
<br/>
<div style="height: 48px;" >
    
    <a class="BotonBack" href="@Url.Action("Index","Ordenes")">
       <img alt="" src="@Url.Content("~/Content/BotonesTabla/back.png")" /> 
    </a>

</div>
