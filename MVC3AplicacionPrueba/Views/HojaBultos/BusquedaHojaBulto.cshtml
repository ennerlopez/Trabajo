@model MVC3AplicacionPrueba.Models.Modelado.ModelHojaBultos.ModelSolicitudDePedido

@{
    ViewBag.Title = "Buscar Hoja Bulto";
}

@using (Html.BeginForm("ConfirmarHojaBultos", "HojaBultos", FormMethod.Get, new { @class = "validacionFormularioGeneral" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
      <table class="chooseLista colorBlanco Negrita">
          <tr>
              <td class="colorAmarillo" colspan="2">Buscar Pedido</td>
          </tr>
          <tr>
                <td>Código:</td>
              <td>
                 @Html.TextBoxFor(model => model.codigoPedido, new { @class = "validate[required]" })
              </td>
                <td> <input type="submit" value="Buscar" />  </td>
            </tr>
        </table>

    </fieldset>
}