@model MVC3AplicacionPrueba.Models.LineasProduccion

@{
    ViewBag.Title = "Lineas de Produccion";
}

@using (Html.BeginForm("Create", "LineaProduccion", FormMethod.Post, new { @class = "validacionFormularioGeneral" }))
{


    <table class="chooseLista colorBlanco Negrita">
                <tr>
                    <td class="colorAmarillo" colspan="2">Creación De Lineas de Produccion </td>
                </tr>
                <tr>
                    <td>Nombre:</td>
                    <td>@Html.TextBoxFor(model => model.nombreLinea, new {@class = "validate[required]"})</td>
                </tr>
            
                <tr>
                     <td>Comentario:</td>
                     <td> @Html.TextBoxFor(model => model.comentarioLinea, new {@class = "validate[required]"})</td>
                </tr>
            
            <tr>
               <td></td>
               <td>  <input type="submit" value="Guardar" /></td>
            </tr>
            

        </table>
            
        
}

<br/>
<div style="height: 48px;" >
    
    <a class="BotonBack" href="@Url.Action("Index")">
       <img alt="" src="@Url.Content("~/Content/BotonesTabla/back.png")" /> 
    </a>

</div>



