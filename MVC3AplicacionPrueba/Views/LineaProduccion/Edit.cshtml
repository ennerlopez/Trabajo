@model MVC3AplicacionPrueba.Models.LineasProduccion

@{
    ViewBag.Title = "Edicion de Lineas";
}


@using (Html.BeginForm("Edit", "LineaProduccion", FormMethod.Post, new { @class = "validacionFormularioGeneral" }))
{
 
        @Html.HiddenFor(model => model.codigoLinea)

 <table class="chooseLista colorBlanco Negrita">
           <tr>
               <td class="colorAmarillo" colspan="2">Editar Lineas Produccion</td>
           </tr>
            <tr>
                <td>Nombre:</td>
                <td> @Html.TextBoxFor(model => model.nombreLinea, new { @class = "validate[required]" })
                </td>
            </tr>
            <tr>
                <td>Comentario Linea:</td>
                <td>   @Html.TextBoxFor(model => model.comentarioLinea, new { @class = "validate[required]" })
           </td>
            </tr>
            
            <tr>
                <td></td>
                <td>   <input type="submit" value="Guardar" /></td>
            </tr>
            
        </table>
}
<br/>
 
<div style="height: 48px;" >
    
    <a class="BotonBack" href="@Url.Action("Index")">
       <img alt="" src="@Url.Content("~/Content/BotonesTabla/back.png")" /> 
    </a>

</div>
  
    
    
    
    
   